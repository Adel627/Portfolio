@model PersonalinfoViewModel

<main class="main">
    <!-- Hero Section -->
    <section id="hero" class="hero section">
        <div class="hero-content">
            <div class="hero-text" data-aos="zoom-out" data-aos-delay="100">
                <h2>@ViewBag.name</h2>
                <p>I'm <span class="typed" data-typed-items="@ViewData["Title"]">@ViewData["Title"]</span><span class="typed-cursor typed-cursor--blink"></span></p>
                <div class="social-links">
                    <a href="@Model.Links[0]" target="_blank"><i class="bi bi-github"></i></a>
                    <a href="@Model.Links[1]" target="_blank"><i class="bi bi-linkedin"></i></a>
                    <a href="@Model.Links[2]" target="_blank"><i class="bi bi-facebook"></i></a>
                    <a href="@Model.Links[3]" target="_blank"><i class="bi bi-instagram"></i></a>
                </div>
            </div>

            <div class="hero-image-wrapper" data-aos="fade-in">
                <img src="~/assets/img/IMG-20250720-WA0125.jpg" alt="Adel Fayed - Backend .NET Developer">
            </div>
        </div>
    </section><!-- /Hero Section -->
</main>
<style>
    #hero {
        background-color: #000000 !important;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem;
    }

    .hero-content {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 3rem;
        max-width: 1200px;
        width: 100%;
        flex-direction: row-reverse;
    }

    .hero-image-wrapper {
        flex: 0 0 auto;
        display: flex;
        justify-content: center;
        order: 1;
    }

        .hero-image-wrapper img {
            width: 400px;
            height: 400px;
            border-radius: 50%;
            object-fit: cover;
            box-shadow: 0 10px 30px rgba(255, 255, 255, 0.1);
            border: 4px solid #0000;
            transition: transform 0.3s ease;
        }

            .hero-image-wrapper img:hover {
                transform: scale(1.05);
            }

    .hero-text {
        flex: 1;
        color: white;
        text-align: center;
        order: 2;
    }

        .hero-text h2 {
            font-size: 3rem;
            margin-bottom: 1rem;
            font-weight: bold;
        }

        .hero-text p {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            color: #e0e0e0;
        }

</style></style>