@model Personalinfo

<style>
    .about-page-title {
        background: linear-gradient(135deg, #000000 0%, #000000 100%);
        padding: 3rem 0;
        text-align: center;
        color: white;
    }

    .about-page-title h1 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .about-page-title p {
        font-size: 1.1rem;
        line-height: 1.8;
        max-width: 800px;
        margin: 0 auto;
        color: #e0e0e0;
    }

    #about {
        padding: 4rem 0;
        background-color: #000000;
    }

    .about-image-wrapper {
        position: relative;
        margin-bottom: 2rem;
    }

    .about-image-wrapper img {
        border-radius: 10px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        width: 100%;
        max-height: 400px;
        object-fit: cover;
    }

    .about-image-wrapper img:hover {
        transform: translateY(-10px);
    }

    .about-content h2 {
        color: #1565c0;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    .about-intro-text {
        font-size: 1.1rem;
        color: #e0e0e0;
        line-height: 1.8;
        margin-bottom: 2rem;
        font-style: italic;
        border-left: 4px solid #1565c0;
        padding-left: 1.5rem;
    }

    .about-info-section {
        margin-top: 2.5rem;
    }

    .info-item {
        margin-bottom: 1.5rem;
    }

    .info-item ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .info-item li {
        margin-bottom: 1rem;
        padding: 0.8rem;
        background-color: #1a1a1a;
        border-radius: 8px;
        border-left: 4px solid #1565c0;
        transition: all 0.3s ease;
    }

    .info-item li:hover {
        background-color: #2d2d2d;
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(21, 101, 192, 0.2);
    }

    .info-item i {
        color: #1565c0;
        margin-right: 0.8rem;
        font-weight: bold;
    }

    .info-item strong {
        color: #1565c0;
        font-weight: 600;
    }

    .info-item span {
        color: #e0e0e0;
        font-weight: 500;
    }

   
</style>

    <main class="main">

        <!-- Page Title -->
        <div class="about-page-title" data-aos="fade">
            <div class="container">
                <h1>About Me</h1>
                <p>@Model.Aboutme</p>
            </div>
        </div><!-- End Page Title -->

        <!-- About Section -->
        <section id="about" class="about section">
            <div class="container" data-aos="fade-up" data-aos-delay="100">
                <div class="row gy-4 align-items-center">
                    <div class="col-lg-4">
                        <div class="about-image-wrapper">
                            <img src="~/assets/img/sav.png" class="img-fluid" alt="@Model.Name">
                        </div>
                    </div>

                    <div class="col-lg-8 about-content">
                        <h2>@Model.Name</h2>
                        <p class="about-intro-text">@Model.Title</p>
                        
                        <div class="about-info-section">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="info-item">
                                        <ul>
                                            <li><i class="bi bi-calendar-event"></i> <strong>Birthday:</strong> <span>@Model.Birthdate</span></li>
                                            <li><i class="bi bi-telephone"></i> <strong>Phone:</strong> <span>@Model.Phonenumber</span></li>
                                            <li><i class="bi bi-geo-alt"></i> <strong>City:</strong> <span>@Model.City</span></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="info-item">
                                        <ul>
                                            <li><i class="bi bi-person"></i> <strong>Age:</strong> <span>@Model.Age</span></li>
                                            <li><i class="bi bi-envelope"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                                            <li><i class="bi bi-briefcase"></i> <strong>Freelance:</strong> <span style="color: #28a745; font-weight: bold;">Available</span></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- /About Section -->

    </main>