@model Personalinfo

    <main class="main">

        <!-- Page Title -->
        <div class="page-title" data-aos="fade">
            <div class="heading">
                <div class="container">
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-lg-8">
                            <h1>About</h1>
                            <p class="mb-0">@Model.Aboutme</p>
                        </div>
                    </div>
                </div>
            </div>
          
        </div><!-- End Page Title -->
        <!-- About Section -->
        <section id="about" class="about section">

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="row gy-4 justify-content-center">
                    <div class="col-lg-4">
                    <img src="~/assets/img/sav.png" class="img-fluid" alt="">
                    </div>
                    <div class="col-lg-8 content">
                        <h2>@Model.Title</h2>
                        <p class="fst-italic py-3">
                        
                        </p>
                        <div class="row">
                            <div class="col-lg-6">
                                <ul>
                                    <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@Model.Birthdate</span></li>
                                    <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@Model.Phonenumber</span></li>
                                    <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@Model.City</span></li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul>
                                    <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@Model.Age</span></li>
                                    <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                                    <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>Available</span></li>
                                </ul>
                            </div>
                        </div>
                        <p class="py-3">
                        
                        </p>
                    </div>
                </div>

            </div>

        </section><!-- /About Section -->
     
      

    </main>

        